syntax = "v2"

info(
	author: "许磊"
	date:   "2022-06-13"
	desc:   "login接口"
)

type LoginRequest {
    Username string `json:"username"`
    Password string `json:"password"`
}

type LoginResponse {
    Id     int64  `json:"id"`
    Name   string `json:"name"`
    Gender int64  `json:"gender"`
}

@server (
    group: user
    prefix: user
)

service admin-api {
	@doc "用户登录"
	@handler LoginHandler
	post /login (LoginRequest) returns (LoginResponse)
}